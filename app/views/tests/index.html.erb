<h1>Listing tests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Marks submitted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tests.each do |test| %>
  <tr>
    <td><%= test.name %></td>
    <td><%= test.description %></td>
    <td><%= test.start_time %></td>
    <td><%= test.end_time %></td>
    <td><%= test.marks_submitted %></td>
    <td><%= link_to 'Show', test %></td>
    <td><%= link_to 'Edit', edit_test_path(test) %></td>
    <td><%= link_to 'Destroy', test, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

